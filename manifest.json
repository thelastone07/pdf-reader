{
  "name": "PDF.js Extension Viewer",
  "version": "1.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["build/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
